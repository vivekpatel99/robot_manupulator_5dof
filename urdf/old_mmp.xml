<?xml version="1.0"?>

<robot name="joy-it" xmlns:xacro="http://www.ros.org/wiki/xacro">
<!-- *************************************colors********************************************-->
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="Red">
        <color rgba="0 0.0 1.0 1.0"/>
    </material>

<!-- *************************************bottum_link********************************************-->
    <link name="bottom_link">
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <!-- unit is meter -->
            <cylinder length="0.03" radius="0.08"/>
        </geometry>
        <material name="black"/>
        </visual>
    </link>
    <m_link_cylinder name="bottom_link"
        origin_rpy="0 0 0"
        origin_xyz="0 0 0"
        radius="0.03" length="0.08" />
    <joint name="bottom_link__base_link" type="fixed">
        <axis xyz="0 0 1"/>
        <origin rpy="0 0 0" xyz="0 0 0.015"/>
        <parent link="bottom_link"/>
        <child link="base_link"/>
    </joint>

<!-- *************************************base_link*********************************************-->
    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.015"/>
            <geometry>
                <!-- unit is meter -->
                 <cylinder length="0.05" radius="0.06"/>
            </geometry>
        <material name="black"/>
        </visual>
    </link>

    <joint name="base_link__link_01" type="revolute">
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="0" upper="3.14" velocity="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 0.028"/>
        <parent link="base_link"/>
        <child link="link_01"/>
    </joint>


